  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Project",
      "type": "lua-local",
      "request": "launch",
      "program": {
        "command": "luajit",
      },
      "args": [
        "run/default.lua"
      ],
      "scriptRoots": [
        "${workspaceFolder}"
      ]
    },
    {
      "name": "Debug Lua File",
      "type": "lua-local",
      "request": "launch",
      "program": {
        "lua": "luajit",
        "file": "${file}"
      },
      "scriptRoots": [
        "${workspaceFolder}"
      ],
    }
  ]
}